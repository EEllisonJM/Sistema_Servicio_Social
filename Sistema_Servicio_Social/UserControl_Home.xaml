        </StackPanel>
        <StackPanel Background="Yellow" HorizontalAlignment="Left" Height="100" Margin="140,465,0,127" Width="350" Orientation="Horizontal">
            <materialDesign:PackIcon Kind="FileAccount" Height="80" Width="73" Margin="10,10,10,0"/>
