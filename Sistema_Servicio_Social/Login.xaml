<Window x:Class="Sistema_Servicio_Social.Login"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_Servicio_Social"
        mc:Ignorable="d"
        Title="Login" Height="325" Width="395" FontSize="14" Background="#f30" ResizeMode="NoResize">
    <Border Background="#FF6600" CornerRadius="25" Margin="20 15">
        <StackPanel Margin="20 15">
            <Label Content="Bienvenid@" Foreground="White" FontSize="25" HorizontalAlignment="Center" FontStyle="Italic"/>
            <Separator></Separator>
            <Label Content="Usuario:" Foreground="White" FontSize="18px"/>
            <TextBox Name="txtUser" Background="#cc3300" Foreground="White" FontSize="20"/>
            <Label Content="Contraseña:" Foreground="White" FontSize="18px"/>
            <PasswordBox Name="txtPassword" Background="#cc3300" Foreground="White" FontSize="20"/>
            <Button Name="btnLogin" Click="btnIniciarSesion" Content="Iniciar Sesión" Background="#800000" Foreground="White" FontSize="20" Height="45" Margin="0 5"/>
        </StackPanel>
    </Border>
</Window>
